<?xml version="1.0" encoding="UTF-8"?>
<!-- 站点解析配置文件
 配置哪些网站需要解析
 网站内哪些页面是我们所需要的（可通过正则表达式等手段来判断）
 不同类型的页面如何抓爬(可通过配置，如果实现不了，可制定解析类)-->
<octopus>
<!-- site站点  name 名称 address 站点地址 type 映射类名 配置解析类型-->
<site name="vfxinfo" address="http://vfxinfo.net/" type="EasyScratch">

	<href-list>
		<href classify="VFXinfo独家">http://vfxinfo.net/category/vfxinfoonly/</href>
		<href classify="国内新闻">http://vfxinfo.net/category/vfxinfoonly/</href>
		<href classify="国外新闻">http://vfxinfo.net/category/vfxinfoonly/</href>
		<href classify="动画幕后">http://vfxinfo.net/category/vfxinfoonly/</href>
		<href classify="电影幕后">http://vfxinfo.net/category/vfxinfoonly/</href>
	</href-list>
	
	<!-- 映射类名  由哪个类进行抓取 -->
	<scratch>VfxinfoScratch</scratch>
</site>
</octopus>